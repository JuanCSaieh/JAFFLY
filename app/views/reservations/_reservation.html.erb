<tr>
  <td><%= reservation.id %></td>
  <td><%= reservation.name %></td>
  <td><%= number_to_currency(reservation.value, :unit => "$") %></td>
  <td>
    <div class="row mb-3">
        <div class="col-2">
            <% if reservation.paymentStatus %>
                <button type="button" class="btn btn-success" disabled>Success</button>
            <% else %>
                <div class="col-2">
                    <%= link_to 'Pagar', payment_path(reservation), :class => 'btn btn-secondary active' %>
                </div>
            <% end %>
        </div>

        <div class="col-2">
            <%= link_to 'Mostrar Mas', reservation_path(reservation), :class => 'btn btn-secondary' %>
        </div>

        <div class="col-1">
            <%= link_to 'Editar', edit_reservation_path(reservation), :class => 'btn btn-warning active' %>
        </div>

        <div class="col-2">
            <%= link_to 'Escoger', change_path(reservation), :class => 'btn btn-warning active' %>
        </div>

        <div class="col-2">
            <%= button_to 'Eliminar', reservation_path(reservation), method: :delete, :class => 'btn btn-danger active' %>
        </div>
    </div>
  </td>
</tr>